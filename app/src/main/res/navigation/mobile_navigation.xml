<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/home"
    >

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.apolloedusolve.account_screen.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.apolloedusolve.account_screen.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_jobs"
        android:name="com.example.apolloedusolve.account_screen.JobsFragment"
        android:label="Jobs"
        tools:layout="@layout/fragment_jobs" />

    <fragment
        android:id="@+id/navigation_resources"
        android:name="com.example.apolloedusolve.account_screen.ResourcesFragment"
        android:label="Resources"
        tools:layout="@layout/fragment_resources" />

    <fragment
        android:id="@+id/navigation_edit"
        android:name="com.example.apolloedusolve.account_screen.EditFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit" />
</navigation>